<%= form_with url: path, method: method, local: true do |f| %>
  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold, :value => "#{quantity_threshold}" %>
  <%= f.label :percentage_discount %>
  <%= f.text_field :percentage_discount, :value => "#{percentage_discount}" %>
  <%= f.submit button_text %>
<% end %>